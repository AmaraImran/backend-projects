<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Event Dashboard</title>
  <style>
    .events-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
      padding: 20px;
    }
    .event-card {
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .event-image {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }
    .event-details {
      padding: 15px;
    }
    .event-title {
      font-size: 1.2rem;
      color: #7c6363;
      margin-bottom: 8px;
    }
    .event-meta {
      display: flex;
      justify-content: space-between;
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 10px;
    }
    .event-description {
      color: #444;
      margin-bottom: 15px;
    }
    .event-actions {
      display: flex;
      gap: 10px;
    }
    .btn {
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      font-size: 0.9rem;
    }
    .btn-edit {
      background: #7c6363;
      color: white;
    }
    .btn-delete {
      background: #f1f1f1;
      color: #d33;
      border: 1px solid #ddd;
    }
    .no-events {
      text-align: center;
      padding: 40px;
      font-size: 1.1rem;
      color: #666;
      grid-column: 1/-1;
    }
  </style>
</head>
<body>
  <%- include("./partials/navbar") %>
  <div class="events-container">
    <% if (events.length > 0) { %>
      <% events.forEach(event => { %>
        <div class="event-card">
          <img 
            src="<%= event.image ? event.image : '/uploads/default.jpg' %>" 
            class="event-image" 
            alt="<%= event.title %>"
          />
          <div class="event-details">
            <h3 class="event-title"><%= event.title %></h3>
            <div class="event-meta">
              <span><%= new Date(event.date).toLocaleDateString() %></span>
              <span><%= event.location %></span>
            </div>
            <p class="event-description"><%= event.description %></p>
            <div class="event-actions">
              <a href="/event/<%= event._id %>" class="btn btn-edit">Edit</a>
              <form action="/event/<%= event._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-delete">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="no-events">
        No events found. Create your first event!
      </div>
    <% } %>
  </div>
</body>
</html>
